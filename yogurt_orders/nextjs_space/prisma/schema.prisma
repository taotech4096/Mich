generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  ADMIN
}

enum OrderStatus {
  PENDING
  PAID
  PREPARING
  READY
  DELIVERED
  CANCELLED
}

enum SubscriptionFrequency {
  WEEKLY
  BIWEEKLY
  MONTHLY
}

enum SubscriptionStatus {
  ACTIVE
  PAUSED
  CANCELLED
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  phone         String?
  password      String
  role          Role      @default(CUSTOMER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  addresses     Address[]
  orders        Order[]
  subscriptions Subscription[]
  notes         String?   @db.Text
}

model Address {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  street        String
  number        String
  interior      String?
  colony        String
  city          String
  zipCode       String
  reference     String?   @db.Text
  isDefault     Boolean   @default(false)
  createdAt     DateTime  @default(now())
  orders        Order[]
  subscriptions Subscription[]
}

model Category {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  description String?   @db.Text
  imageUrl    String?
  order       Int       @default(0)
  isActive    Boolean   @default(true)
  products    Product[]
}

model Product {
  id          String      @id @default(cuid())
  name        String
  slug        String      @unique
  description String?     @db.Text
  price       Decimal     @db.Decimal(10, 2)
  comparePrice Decimal?   @db.Decimal(10, 2)
  categoryId  String
  category    Category    @relation(fields: [categoryId], references: [id])
  imageUrl    String?
  cloudStoragePath String?
  isPublicImage Boolean   @default(true)
  stock       Int         @default(0)
  unit        String      @default("pieza")
  isActive    Boolean     @default(true)
  isFeatured  Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  orderItems  OrderItem[]
  subscriptionItems SubscriptionItem[]
}

model Order {
  id              String      @id @default(cuid())
  orderNumber     String      @unique
  userId          String
  user            User        @relation(fields: [userId], references: [id])
  addressId       String
  address         Address     @relation(fields: [addressId], references: [id])
  status          OrderStatus @default(PENDING)
  subtotal        Decimal     @db.Decimal(10, 2)
  deliveryFee     Decimal     @default(0) @db.Decimal(10, 2)
  total           Decimal     @db.Decimal(10, 2)
  deliveryDay     DateTime
  deliverySlot    String?     
  paymentMethod   String?     
  paymentId       String?     
  notes           String?     @db.Text
  adminNotes      String?     @db.Text
  subscriptionId  String?
  subscription    Subscription? @relation(fields: [subscriptionId], references: [id])
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  items           OrderItem[]
}

model OrderItem {
  id          String    @id @default(cuid())
  orderId     String
  order       Order     @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId   String
  product     Product   @relation(fields: [productId], references: [id])
  productName String
  price       Decimal   @db.Decimal(10, 2)
  quantity    Int
  total       Decimal   @db.Decimal(10, 2)
}

model Subscription {
  id            String              @id @default(cuid())
  userId        String
  user          User                @relation(fields: [userId], references: [id])
  addressId     String
  address       Address             @relation(fields: [addressId], references: [id])
  frequency     SubscriptionFrequency
  status        SubscriptionStatus  @default(ACTIVE)
  preferredDay  String              
  nextDelivery  DateTime
  lastDelivery  DateTime?
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
  items         SubscriptionItem[]
  orders        Order[]
}

model SubscriptionItem {
  id              String        @id @default(cuid())
  subscriptionId  String
  subscription    Subscription  @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
  productId       String
  product         Product       @relation(fields: [productId], references: [id])
  quantity        Int
}

model DeliveryZone {
  id        String    @id @default(cuid())
  name      String
  cities    String[]  
  colonies  String[]  
  zipCodes  String[]  
  fee       Decimal   @default(0) @db.Decimal(10, 2)
  isActive  Boolean   @default(true)
}

model Settings {
  id              String    @id @default(cuid())
  businessName    String    @default("Tienda Artesanal")
  phone           String?
  email           String?
  whatsapp        String?
  deliveryDays    String[]  @default(["Martes", "Viernes"])
  minOrderAmount  Decimal   @default(0) @db.Decimal(10, 2)
  defaultDeliveryFee Decimal @default(0) @db.Decimal(10, 2)
  mercadoPagoEnabled Boolean @default(false)
  cashEnabled     Boolean   @default(true)
  transferEnabled Boolean   @default(true)
}
